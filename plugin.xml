<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Visualizers"
            id="com.codeviz.codeviz">
      </category>
      <view
            name="CodeViz"
            icon="icons/sample.gif"
            category="com.codeviz.codeviz"
            class="com.codeviz.codeviz.views.VisualizerView"
            id="com.codeviz.codeviz.views.VisualizerView">
      </view>
      <view
            category="com.codeviz.codeviz"
            class="com.codeviz.codeviz.views.DiagramView"
            id="com.codeviz.codeviz.diagramView"
            name="DiagramView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="com.codeviz.codeviz.views.VisualizerView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
